---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import posts from '../data/blog.json';
---

<BaseLayout title="Blog | Seth Mbasha">
  <Navbar isHomePage={false} />
  <main>
    <section class="section blog-section" style="padding-top: 120px; min-height: 80vh;">
      <div class="container">
        <div class="section-header animate-fade-in">
          <h1 class="section-title">Blog</h1>
          <div class="section-title-underline"></div>
          <p class="section-subtitle">
            Thoughts and insights on technology, innovation, and modern challenges
          </p>
        </div>

        <div class="blog-grid">
          {posts.map((post, index) => (
            <div class="blog-card" style={`animation-delay: ${index * 0.1}s`}>
              <img
                src={post.image}
                alt={post.title}
                class="blog-img"
                loading="lazy"
              />
              <div class="blog-content">
                <div class="blog-date">{post.date}</div>
                <h3 class="blog-title">{post.title}</h3>
                <p class="blog-excerpt">{post.excerpt}</p>
                <a href={post.link} class="blog-link">
                  Read More
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
