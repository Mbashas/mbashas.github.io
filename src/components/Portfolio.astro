---
import projects from '../data/projects.json';

// Show featured projects first
const sortedProjects = [...projects].sort((a, b) => {
  if (a.featured && !b.featured) return -1;
  if (!a.featured && b.featured) return 1;
  return 0;
});
---

<section id="portfolio" class="portfolio-section">
  <div class="container">
    <h2 class="section-title">Projects</h2>

    <div class="projects-grid">
      {sortedProjects.map((project) => (
        <article class={`project-card ${project.featured ? 'featured' : ''}`}>
          <div class="project-header">
            <span class="project-date">{project.date}</span>
            <span class="project-category">{project.category}</span>
          </div>

          <h3 class="project-title">{project.title}</h3>

          {project.problem && (
            <p class="project-problem">{project.problem}</p>
          )}

          <p class="project-description">{project.description}</p>

          {project.tech && (
            <div class="project-tech">
              {project.tech.map((t) => (
                <span class="tech-tag">{t}</span>
              ))}
            </div>
          )}

          <div class="project-links">
            <a href={project.link} target="_blank" rel="noopener noreferrer" class="project-link">
              GitHub
            </a>
            {project.demo && (
              <a href={project.demo} target="_blank" rel="noopener noreferrer" class="project-link">
                Demo
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .portfolio-section {
    padding: var(--space-xl) 0;
    background: var(--color-parchment);
  }

  .section-title {
    font-size: 1.75rem;
    color: var(--color-sapphire);
    margin-bottom: var(--space-lg);
    font-weight: 600;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: var(--space-md);
  }

  .project-card {
    background: var(--color-ivory);
    padding: 1.5rem;
    border-radius: 4px;
    border-left: 3px solid var(--color-gold);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .project-card.featured {
    border-left-color: var(--color-sapphire);
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(44, 36, 32, 0.08);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .project-date {
    font-size: 0.8rem;
    color: var(--color-sapphire);
    font-weight: 600;
  }

  .project-category {
    font-size: 0.7rem;
    color: var(--color-charcoal-light);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-title {
    font-size: 1.1rem;
    color: var(--color-charcoal);
    margin-bottom: 0.5rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .project-problem {
    font-size: 0.85rem;
    color: var(--color-sapphire-muted);
    font-style: italic;
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  .project-description {
    color: var(--color-charcoal-light);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-bottom: 0.75rem;
  }

  .tech-tag {
    font-size: 0.75rem;
    color: var(--color-sapphire);
    background: rgba(27, 54, 93, 0.08);
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    font-size: 0.85rem;
    color: var(--color-sapphire);
    text-decoration: none;
    padding-bottom: 2px;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease;
  }

  .project-link:hover {
    border-bottom-color: var(--color-gold);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
