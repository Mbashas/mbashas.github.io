---
import skills from '../data/skills.json';
import timeline from '../data/timeline.json';
import site from '../data/site.json';
---

<section id="about" class="section-about">
  <div class="container">
    <h2 class="section-title">About</h2>

    <div class="about-grid">
      <!-- Left: Portrait -->
      <div class="about-portrait">
        <img
          src="/images/portrait.jpg"
          alt={site.name}
          class="portrait-image"
          loading="lazy"
        />
      </div>

      <!-- Right: Bio and Info -->
      <div class="about-content">
        <p class="about-bio">{site.bio}</p>

        <div class="about-details">
          <div class="detail-item">
            <span class="detail-label">Education</span>
            <span class="detail-value">{site.education.degree}, {site.education.school}</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">GPA</span>
            <span class="detail-value">{site.education.gpa}</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Location</span>
            <span class="detail-value">{site.location}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Skills Section -->
    <div class="skills-section">
      <h3 class="subsection-title">Technical Skills</h3>
      <div class="skills-grid">
        {skills.technical.map((skillGroup) => (
          <div class="skill-group">
            <h4 class="skill-category">{skillGroup.category}</h4>
            <p class="skill-items">{skillGroup.items.join(', ')}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Certifications -->
    <div class="certifications-section">
      <h3 class="subsection-title">Certifications</h3>
      <ul class="cert-list">
        {skills.certifications.map((cert) => (
          <li class="cert-item">
            <span class="cert-name">{cert.name}</span>
            <span class="cert-issuer">{cert.issuer}</span>
          </li>
        ))}
      </ul>
    </div>

    <!-- Languages -->
    <div class="languages-section">
      <h3 class="subsection-title">Languages</h3>
      <div class="language-list">
        {skills.languages.map((lang) => (
          <span class="language-item">
            {lang.name} <span class="lang-level">({lang.level})</span>
          </span>
        ))}
      </div>
    </div>

    <!-- Timeline -->
    <div class="timeline-section">
      <h3 class="subsection-title">Experience & Education</h3>
      <div class="timeline">
        {timeline.map((item) => (
          <div class="timeline-item">
            <span class="timeline-year">{item.year}</span>
            <div class="timeline-content">
              <h4 class="timeline-title">{item.title}</h4>
              <p class="timeline-institution">{item.institution}</p>
              <p class="timeline-description">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .section-about {
    padding: var(--space-xl) 0;
    background: var(--color-cream);
  }

  .section-title {
    font-size: 2rem;
    color: var(--color-sapphire);
    margin-bottom: var(--space-lg);
    font-weight: 600;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    align-items: start;
  }

  .about-portrait {
    position: sticky;
    top: 100px;
  }

  .portrait-image {
    width: 100%;
    border-radius: 4px;
    filter: grayscale(10%);
  }

  .about-bio {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-charcoal);
    margin-bottom: var(--space-md);
  }

  .about-details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .detail-item {
    display: flex;
    gap: 1rem;
  }

  .detail-label {
    font-weight: 500;
    color: var(--color-sapphire-muted);
    min-width: 80px;
  }

  .detail-value {
    color: var(--color-charcoal);
  }

  .subsection-title {
    font-size: 1.25rem;
    color: var(--color-sapphire);
    margin-bottom: var(--space-sm);
    font-weight: 600;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(197, 165, 114, 0.2);
  }

  .skills-section,
  .certifications-section,
  .languages-section,
  .timeline-section {
    margin-bottom: var(--space-lg);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-md);
  }

  .skill-group {
    padding: var(--space-sm) 0;
  }

  .skill-category {
    font-size: 0.9rem;
    color: var(--color-sapphire-muted);
    font-weight: 600;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .skill-items {
    color: var(--color-charcoal);
    line-height: 1.6;
    margin: 0;
  }

  .cert-list {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 0.75rem;
  }

  .cert-item {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(197, 165, 114, 0.1);
  }

  .cert-name {
    color: var(--color-charcoal);
  }

  .cert-issuer {
    color: var(--color-sapphire-muted);
    font-size: 0.9rem;
  }

  .language-list {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .language-item {
    color: var(--color-charcoal);
  }

  .lang-level {
    color: var(--color-sapphire-muted);
    font-size: 0.9rem;
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .timeline-item {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: 1.5rem;
  }

  .timeline-year {
    color: var(--color-sapphire);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .timeline-content {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(197, 165, 114, 0.15);
  }

  .timeline-item:last-child .timeline-content {
    border-bottom: none;
  }

  .timeline-title {
    font-size: 1rem;
    color: var(--color-charcoal);
    margin-bottom: 0.25rem;
    font-weight: 600;
  }

  .timeline-institution {
    color: var(--color-sapphire-muted);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    font-style: italic;
  }

  .timeline-description {
    color: var(--color-charcoal-light);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .about-portrait {
      position: static;
      max-width: 150px;
    }

    .timeline-item {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }
  }
</style>
