---
import site from '../data/site.json';
---

<section id="home" class="hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-name">{site.name}</h1>
      <p class="hero-tagline">{site.tagline}</p>
      <p class="hero-title">{site.title}</p>

      <div class="hero-links">
        <a href={site.social.github} target="_blank" rel="noopener noreferrer" class="social-link">
          GitHub
        </a>
        <a href={site.social.linkedin} target="_blank" rel="noopener noreferrer" class="social-link">
          LinkedIn
        </a>
        <a href={site.social.x} target="_blank" rel="noopener noreferrer" class="social-link">
          X/Twitter
        </a>
        <a href={`mailto:${site.email}`} class="social-link">
          Email
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 70vh;
    display: flex;
    align-items: center;
    padding: var(--space-2xl) 0 var(--space-xl);
    background: var(--color-cream);
  }

  .hero-content {
    max-width: 700px;
  }

  .hero-name {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 700;
    color: var(--color-sapphire);
    margin-bottom: 0.5rem;
    letter-spacing: 0.02em;
    line-height: 1.1;
  }

  .hero-tagline {
    font-size: 1.1rem;
    color: var(--color-gold-dark);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .hero-title {
    font-size: 1rem;
    color: var(--color-charcoal-light);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .hero-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .social-link {
    color: var(--color-sapphire);
    font-size: 0.9rem;
    text-decoration: none;
    padding-bottom: 2px;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease, color 0.2s ease;
  }

  .social-link:hover {
    border-bottom-color: var(--color-gold);
    color: var(--color-gold-dark);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 50vh;
      padding: var(--space-xl) 0;
    }

    .hero-links {
      gap: 1rem;
    }
  }
</style>
